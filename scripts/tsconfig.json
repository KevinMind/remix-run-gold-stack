{
  "exclude": [],
  "include": ["**/*.ts"],
  "extends": "ts-node/node16/tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2022"], // ES2020 in earlier versions
    "module": "ESNext",
    "moduleResolution": "Node",
